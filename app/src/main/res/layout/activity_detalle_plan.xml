<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".activities.DetallePlanActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:theme="@style/Widget.AppCompat.Toolbar"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:paddingBottom="5dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/cntTarifa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="start">

                <TextView
                    android:id="@+id/lbPlan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom|center_horizontal"
                    android:textColor="#000"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="5dp"
                    android:layout_alignBottom="@+id/lbCostoPlan"
                    android:text="Plan Amplio"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/lbCostoPlan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/lbPlan"
                    android:text="$0.90"
                    android:textColor="#000"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/lbKmPlan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/lbCostoPlan"
                    android:layout_toRightOf="@id/lbCostoPlan"
                    android:layout_marginLeft="5dp"
                    android:textColor="#000"
                    android:text=" por km"
                    android:textSize="20sp"
                    android:layout_marginStart="5dp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/lbDaños"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:layout_marginTop="18dp"
                android:textSize="14sp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_gravity="start"
                android:text="Daños materiales" />

            <TextView
                android:id="@+id/lbDaños2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:layout_marginTop="3dp"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="#000"
                android:layout_gravity="start"
                android:text="Indemnización: Valor comercial. Deducible: 5%" />

            <TextView
                android:id="@+id/lbRobo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:layout_marginTop="18dp"
                android:textSize="14sp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_gravity="start"
                android:text="Robo total" />

            <TextView
                android:id="@+id/lbRobo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:layout_marginTop="3dp"
                android:textSize="12sp"
                android:textColor="#000"
                android:gravity="center"
                android:layout_gravity="start"
                android:text="Indemnización: Valor comercial. Deducible: 10%" />

            <TextView
                android:id="@+id/lbDaños3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:layout_marginTop="18dp"
                android:textSize="14sp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_gravity="start"
                android:text="RC por daños a terceros" />

            <TextView
                android:id="@+id/lbDaños32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:layout_marginTop="3dp"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="#000"
                android:layout_gravity="start"
                android:text="$3,000,000 pesos" />

            <TextView
                android:id="@+id/lbGastos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:layout_marginTop="18dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_gravity="start"
                android:textColor="#000"
                android:text="Gastos médicos ocupantes" />

            <TextView
                android:id="@+id/lbGastos2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:layout_marginTop="3dp"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="#000"
                android:layout_gravity="start"
                android:text="$200,000 pesos" />

            <LinearLayout
                android:id="@+id/cntLey"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_gravity="start">
                <TextView
                    android:id="@+id/lbDefensa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:textSize="14sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:text="Defensa legal/jurídica" />
                <ImageView
                    android:id="@+id/mas1"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_marginLeft="20dp"
                    app:srcCompat="@mipmap/btplus" />
            </LinearLayout>

            <TextView
                android:id="@+id/lbDefensa2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:visibility="gone"
                android:layout_marginTop="1dp"
                android:textSize="12sp"
                android:textColor="#9A9A9A"
                android:layout_gravity="start"
                android:text="-Libs" />

            <LinearLayout
                android:id="@+id/cntAsistencia"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_gravity="start">
                <TextView
                    android:id="@+id/lbAsistencia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:textSize="14sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:text="Servicios de asistencia" />
                <ImageView
                    android:id="@+id/mas2"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_marginLeft="15dp"
                    app:srcCompat="@mipmap/btplus" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/cntAsistencia2"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/lbAsistencia21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:layout_marginTop="1dp"
                    android:textSize="12sp"
                    android:textColor="#9A9A9A"
                    android:textStyle="bold"
                    android:gravity="start"
                    android:text="Asistencia en viajes" />
                <TextView
                    android:id="@+id/lbAsistencia22"
                    android:layout_below="@id/lbAsistencia21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="3dp"
                    android:textSize="12sp"
                    android:textColor="#9A9A9A"
                    android:gravity="start"
                    android:text="fwyiugfywuhfynwp" />
                <TextView
                    android:id="@+id/lbAsistencia23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:layout_below="@+id/lbAsistencia22"
                    android:textSize="12sp"
                    android:layout_marginTop="3dp"
                    android:textStyle="bold"
                    android:textColor="#9A9A9A"
                    android:gravity="start"
                    android:text="Asistencia automovilistica \n(3 eventos po año)" />
                <TextView
                    android:id="@+id/lbAsistencia24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lbAsistencia23"
                    android:background="#fff"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="3dp"
                    android:textSize="12sp"
                    android:textColor="#9A9A9A"
                    android:gravity="start"
                    android:text="f3fq3" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/cntcnt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:paddingTop="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/border">
                <LinearLayout
                    android:id="@+id/cntPago"
                    android:layout_marginBottom="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:padding="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Al contratar"
                            android:textColor="#000"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="12sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Seguro obligatorio RC"
                            android:layout_marginTop="5dp"
                            android:textColor="#000"
                            android:gravity="center"
                            android:textSize="8sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$561"
                            android:layout_marginTop="5dp"
                            android:textColor="#9A9A9A"
                            android:gravity="center"
                            android:textSize="18sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="5dp"
                            android:text="Único pago por vigencia de pago"
                            android:textColor="#000"
                            android:textSize="8sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:padding="10dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Meses subsecuentes"
                            android:textColor="#000"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textSize="12sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Prima por"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:textColor="#000"
                            android:textSize="8sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="kms."
                            android:layout_marginTop="5dp"
                            android:textColor="#9A9A9A"
                            android:textSize="20sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Recorridos"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:textColor="#000"
                            android:textSize="8sp"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0.5dp"
                    android:layout_centerHorizontal="true"
                    android:background="#9a9a9a"
                    android:layout_alignTop="@+id/cntPago"
                    android:layout_alignBottom="@+id/cntPago"
                    android:layout_height="match_parent"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/lbOK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="-20dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:background="@drawable/greenbutton"
                android:text="Contratar"
                android:textColor="#000"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>