<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.InfoCancelActivity"
    android:orientation="vertical"
    android:background="#e9e9e9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:orientation="vertical">
        <TextView
            android:id="@+id/lb1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:theme="@style/textThemePrimary"
            android:layout_marginTop="30dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:lineSpacingMultiplier="1.8"
            android:text="La cancelacion"/>

        <TextView
            android:id="@+id/lb2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/textThemePrimary"
            android:gravity="center"

            android:lineSpacingMultiplier="1.3"
            android:text="Ésto puede tardar unos días."
            android:layout_marginTop="30dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/lb3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/textThemePrimary"
            android:gravity="center"
            android:lineSpacingMultiplier="1.3"
            android:text="No te preocupes, ya no tienes que hacer nada más, nosotros te notificamos cuando este cancelada."
            android:layout_marginTop="30dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="15dp"/>
    </LinearLayout>
</LinearLayout>