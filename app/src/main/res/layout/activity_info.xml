<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".activities.MainActivity">

    <TextView
        android:id="@+id/lbTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:text="Renovación de póliza"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="#000000"
        />

    <TextView
        android:id="@+id/lb1"
        android:layout_below="@+id/lbTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp"
        android:text="Su renovación está lista, la recibira el dia"
        android:theme="@style/textThemePrimary"
        android:gravity="center"

        />

    <TextView
        android:id="@+id/lbfecha"
        android:layout_below="@+id/lb1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp"
        android:text="12 de mayo del 2019"
        android:textStyle="bold"
        android:theme="@style/textThemePrimary"
        android:gravity="center"
        android:layout_marginTop="0dp"

        />

    <TextView
        android:id="@+id/lb9"
        android:layout_below="@+id/lbTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp"
        android:text="Recuerde que después de su siguiente reporte\nharemos el cargo de:"
        android:theme="@style/textThemePrimary"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/lbOK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="55dp"
        android:paddingBottom="7dp"
        android:paddingTop="7dp"
        android:paddingRight="40dp"
        android:paddingLeft="40dp"
        android:background="@drawable/button"
        android:text="CERRAR"
        android:onClick="entendido"
        android:theme="@style/buttonThemePrimary"/>

    <RelativeLayout
        android:id="@+id/cnt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lb9"
        android:layout_marginTop="40dp"
        android:background="#AAEFCDBC">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/cnt12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lbPagoUnico"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center_horizontal|bottom"
                    android:text="Pago único"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/lbCosto"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:gravity="center_horizontal|bottom"
                    android:text="$561.00"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="22sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/lbSeguro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cnt12"
                android:layout_marginTop="15dp"
                android:text="Seguro de responsabilidad civil"
                android:theme="@style/textThemePrimary" />

            <TextView
                android:id="@+id/lbPago1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lbSeguro"
                android:layout_marginTop="5dp"
                android:text="Derecho de póliza"
                android:theme="@style/textThemePrimary"/>


        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/lbPlan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/textThemePrimary"
        android:layout_below="@id/cnt1"
        android:layout_marginTop="20dp"
        android:text="Su tarifa para el siguiente año es de:"
        android:gravity="center"/>

    <LinearLayout
        android:id="@+id/cnt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lbPlan"
        android:layout_marginTop="20dp"
        android:background="#AAEFCDBC">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:gravity="bottom"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lbTarifa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-5dp"
                    android:text="Plan amplio"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lbCostoTarifa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|bottom"
                    android:text="$561.00"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/lbkm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="por km"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cntCancelar"
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cnt2"
        android:gravity="center_horizontal"
        android:paddingLeft="45dp"
        android:paddingRight="45dp"
        android:layout_above="@+id/lbOK"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/lbl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.4"
            android:text="Si no desea renovar su póliza llámenos al\n
9177 5000 desde la Ciudad de México o al\n
01 800 849 39 16 desde interior de la República"
            android:gravity="center"
            android:theme="@style/textThemePrimary" />

    </LinearLayout>

</RelativeLayout>