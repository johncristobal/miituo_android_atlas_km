<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e9e9e9"
    android:orientation="vertical"
    tools:context=".activities.TicketActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#FFFFFF">

                <TextView
                    android:id="@+id/textView28"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tu recibo del mes"
                    android:layout_marginTop="40dp"
                    android:textSize="18sp"
                    android:paddingLeft="25dp"
                    android:textColor="#2f3030"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingBottom="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lbVacacionesHelp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="20dp"
                    android:textColor="#2f3030"
                    android:visibility="gone"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:text="Sabemos que es posible que salgas de vacaciones un par de veces al año, por eso ésta vez aplicamos un tope vacacional para que ¡Solo pagues 1200 kms!"/>

                <!--Diferencia de odometros-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">



                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="25dp"
                        android:text="kms recorridos en el mes"
                        android:theme="@style/textThemePrimary" />

                    <TextView
                        android:id="@+id/lbDiferencia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:paddingRight="17dp"
                        android:textStyle="bold"
                        android:text="TextView"
                        android:theme="@style/textThemePrimary" />

                </LinearLayout>
                <!--condonacion-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"/>
                <LinearLayout
                    android:id="@+id/cntCondonados"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/lbCondonados"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:paddingLeft="25dp"
                        android:text="No reporte mes anterior (kms)"
                        android:textColor="#2f3030"
                        android:textSize="15sp" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/lbCondonados2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="right"
                            android:text="TextView"
                            android:textColor="#2f3030"
                            android:textSize="17sp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/textView65"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="10dp"
                            android:text="*"
                            android:textSize="17sp"
                            android:textColor="@color/azul_miituo"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
                <!--Vacaciones-->
                <LinearLayout
                    android:id="@+id/cntVacaciones"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/lbVacaciones"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="25dp"
                        android:text="Tope vacacional (kms)"
                        android:textColor="#2f3030"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/lbVacaciones2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="right"
                            android:text="1200"
                            android:textColor="#2f3030"
                            android:textSize="17sp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/textView66"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="10dp"
                            android:text="*"
                            android:textSize="17sp"
                            android:textColor="@color/azul_miituo"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
                <!--referidos-->
                <LinearLayout
                    android:id="@+id/cntReferidos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/lbReferidos"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="25dp"
                        android:text="Cupón referidos (kms)"
                        android:textColor="#2f3030"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/lbReferidos2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="right"
                            android:text="-100"
                            android:textColor="#2f3030"
                            android:textSize="17sp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/textView67"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="10dp"
                            android:text="*"
                            android:textSize="17sp"
                            android:textColor="@color/azul_miituo"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView22"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="25dp"
                        android:text="Total kms a pagar"
                        android:theme="@style/textThemePrimary" />

                    <TextView
                        android:id="@+id/textView24"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:paddingRight="17dp"
                        android:text="TextView"
                        android:theme="@style/textThemePrimary"
                        android:textStyle="bold" />
                </LinearLayout>

                <!--Tarifa por km-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView20"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="25dp"
                        android:text="x Prima por kilómetro"
                        android:theme="@style/textThemePrimary" />

                    <TextView
                        android:id="@+id/textView21"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:paddingRight="17dp"
                        android:text="TextView"
                        android:textColor="#2f3030"
                        android:theme="@style/textThemePrimary" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/textView18"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="25dp"
                        android:text="+ Pago único"
                        android:textColor="#2f3030"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/textView19"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:paddingRight="17dp"
                        android:text="TextView"
                        android:textColor="#2f3030"
                        android:textSize="17sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!--separadpr-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="18dp"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="170dp"
                        android:layout_height="2dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/azul_miituo"></View>
                </LinearLayout>

                <!--Total a cobrar-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView26"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:textStyle="bold"

                        android:text="Total a pagar"
                        android:theme="@style/textThemePrimary"/>

                    <TextView
                        android:id="@+id/textView50"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:paddingRight="17dp"
                        android:text="TextView"
                        android:theme="@style/textThemePrimary"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:background="@color/colorGray"></View>
                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:id="@+id/cntOdometros"
                android:layout_width="match_parent"
                android:orientation="vertical"

                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:paddingBottom="20dp"
                android:paddingTop="8dp"
                android:background="#FFFFFF"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView55"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="25dp"
                    android:paddingLeft="25dp"
                    android:text="Tus odómetros registrados"
                    android:theme="@style/textThemePrimary" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingStart="40dp"
                        android:paddingLeft="40dp"
                        android:text="Actual"
                        android:theme="@style/textThemePrimary" />

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingEnd="20dp"
                        android:paddingRight="20dp"
                        android:theme="@style/textThemePrimary" />

                </LinearLayout>

                <!--Odometro de anterior-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="40dp"
                        android:text="Anterior"
                        android:theme="@style/textThemePrimary" />

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingRight="20dp"
                        android:text="TextView"
                        android:theme="@style/textThemePrimary" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:background="#FFFFFF"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="60dp"
                        android:layout_marginTop="9dp"
                        android:text="Reintentar"
                        android:paddingBottom="5dp"
                        android:textColor="@color/azul_miituo"
                        android:textSize="15sp"
                        android:onClick=""/>

                    <Button
                        android:layout_width="150dp"
                        android:layout_height="25dp"
                        android:text="Si, gracias"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="60dp"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:background="@color/azul_miituo"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="50dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/textoiva"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:text="Nuestros precios incluyen IVA"
                        android:textSize="9sp" />
                    <TextView
                        android:id="@+id/textoTerminos"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:gravity="center"
                        android:textColor="@color/azul_miituo"
                        android:paddingRight="10dp"
                        android:text="Consultar Términos y Condiciones"
                        android:textSize="9sp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>