                    android:id="@+id/textView32"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="150dp"
                    android:layout_marginRight="50dp"
                    android:theme="@style/textThemePrimary"
                    android:gravity="center"
                    android:text="Introduzca el código de seguridad que recibirá enseguida..." />

                <EditText
                    android:id="@+id/editTextToken"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="50dp"
                    android:background="@drawable/border"
                    android:theme="@style/textThemeEdit"
                    android:gravity="center"
                    android:hint="Token"
                    android:inputType="textPersonName" />

                <TextView
                    android:id="@+id/button"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button"
                    android:onClick="loadInfo"
                    android:paddingLeft="15dp"
                    android:paddingTop="3dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="3dp"
                    android:theme="@style/buttonThemePrimary"
                    android:gravity="center"
                    android:text="Empezar" />

                <TextView
                    android:id="@+id/textView59"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:fontFamily="@font/lato"
                    android:gravity="center"
                    android:onClick="sendTokenA"
                    android:text="Enviar de nuevo"
                    android:textColor="@color/naranjaatlas"
                    android:textSize="16sp" />

