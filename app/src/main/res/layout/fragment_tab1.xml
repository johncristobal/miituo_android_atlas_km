<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:paddingTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:background="@drawable/border"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/lbDriver"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:fontFamily="@font/lato"
                            android:textColor="@color/colorGray"
                            android:text="Conductor"/>
                        <TextView
                            android:id="@+id/lbNameDriver"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:text="Name"
                            android:theme="@style/textThemeSecondary"
                            />
                        <TextView
                            android:id="@+id/lbCelDriver"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:text="Name"
                            android:theme="@style/textThemeSecondary"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:background="@color/azul_miituo"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:background="@drawable/border"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/lbContractor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Contratante"
                            android:fontFamily="@font/lato"
                            android:textColor="@color/colorGray"
                            android:gravity="start"/>
                        <TextView
                            android:id="@+id/lbNameContractor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:theme="@style/textThemeSecondary"
                            android:gravity="start"/>
                        <TextView
                            android:id="@+id/lbCelContractor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:theme="@style/textThemeSecondary"
                            android:gravity="start"/>
                    </LinearLayout>
                    <View
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:background="@color/azul_miituo"/>
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:gravity="center"
                    android:background="@drawable/border"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/lbAuto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:fontFamily="@font/lato"
                        android:textColor="@color/colorGray"
                        android:text="Tu auto"/>
                    <TextView
                        android:id="@+id/lbAuto2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="Name"
                        android:theme="@style/textThemeSecondary"
                        />
                </LinearLayout>
                <View
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:background="@color/azul_miituo"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="80dp"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:background="@drawable/border"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/lbPlacas"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:fontFamily="@font/lato"
                            android:textColor="@color/colorGray"
                            android:text="Placas"/>
                        <TextView
                            android:id="@+id/lbPlacas2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:text="Name"
                            android:theme="@style/textThemeSecondary"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:background="@color/azul_miituo"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:gravity="center"
                        android:background="@drawable/border"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/lbModelo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Modelo"
                            android:fontFamily="@font/lato"
                            android:textColor="@color/colorGray"
                            android:gravity="start"/>
                        <TextView
                            android:id="@+id/lbModelo2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:theme="@style/textThemeSecondary"
                            android:gravity="start"/>
                    </LinearLayout>
                    <View
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:background="@color/azul_miituo"/>
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:gravity="center"
                    android:background="@drawable/border">
                    <TextView
                        android:id="@+id/lbLastReport"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:fontFamily="@font/lato"
                        android:textColor="@color/colorGray"
                        android:text="Último reporte odómetro"/>
                    <TextView
                        android:id="@+id/lbLastReport2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="2dp"
                        android:layout_marginEnd="5dp"
                        android:layout_below="@+id/lbLastReport"
                        android:text="Name"
                        android:theme="@style/textThemeSecondary"
                        />
                </RelativeLayout>
                <View
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:background="@color/azul_miituo"/>
            </RelativeLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/btnCambioPago"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="5dp"
                    android:paddingStart="15dp"
                    android:gravity="center_vertical"
                    android:background="#FFFFFF"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_marginEnd="5dp"
                        app:srcCompat="@drawable/poliza"/>
                    <TextView
                        android:id="@+id/lbCambioPago"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:theme="@style/textThemeSecondary"
                        android:text="Cambiar método de pago"
                        android:gravity="start|center_vertical"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/lbLastReport3"
                    android:layout_width="0dp"
                    android:layout_height="55dp"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:paddingStart="15dp"
                    android:gravity="center_vertical"
                    android:background="#FFFFFF"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_marginEnd="5dp"
                        app:srcCompat="@drawable/ver"/>
                    <TextView
                        android:id="@+id/lbEdoCta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start|center_vertical"
                        android:text="Estado de cuenta"
                        android:theme="@style/textThemeSecondary"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>