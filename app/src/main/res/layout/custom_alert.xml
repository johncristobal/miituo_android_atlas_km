<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/back"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <!--separadpr-->

        <!--Odometro de hoy-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView47"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingStart="15dp"
                android:theme="@style/textThemePrimary"
                android:text="Tu recibo del mes"
                android:textStyle="bold"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/lbVacacionesHelp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp"
            android:textColor="#2f3030"
            android:visibility="gone"
            android:textSize="13sp"
            android:theme="@style/textThemePrimary"
            android:gravity="center"
            android:text="Sabemos que es posible que salgas de vacaciones un par de veces al año, por eso ésta vez aplicamos un tope vacacional para que ¡Solo pagues 1200 kms!"/>

        <!--Diferencia de odometros-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView15"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="25dp"
                android:text="kms recorridos en el mes"
                android:theme="@style/textThemePrimary" />

            <TextView
                android:id="@+id/lbDiferencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:paddingEnd="17dp"
                android:textStyle="bold"
                android:text="TextView"
                android:theme="@style/textThemePrimary" />

        </LinearLayout>
        <!--condonacion-->
        <LinearLayout
            android:id="@+id/cntCondonados"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:visibility="gone"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lbCondonados"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingStart="25dp"
                android:text="No reporte mes anterior (kms)"
                android:textColor="#2f3030"
                android:textSize="13sp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/lbCondonados2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="end"
                    android:text="TextView"
                    android:textColor="#2f3030"
                    android:textSize="15sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/textView65"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:text="*"
                    android:textSize="15sp"
                    android:textColor="@color/azul_miituo"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
        <!--Vacaciones-->
        <LinearLayout
            android:id="@+id/cntVacaciones"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lbVacaciones"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="25dp"
                android:text="Tope vacacional (kms)"
                android:textColor="#2f3030"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/lbVacaciones2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="end"
                    android:text="1200"
                    android:textColor="#2f3030"
                    android:textSize="15sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/textView66"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="10dp"
                    android:text="*"
                    android:textSize="15sp"
                    android:textColor="@color/azul_miituo"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
        <!--referidos-->
        <LinearLayout
            android:id="@+id/cntReferidos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lbReferidos"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="25dp"
                android:text="Cupón referidos (kms)"
                android:textColor="#2f3030"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/lbReferidos2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="end"
                    android:text="-100"
                    android:textColor="#2f3030"
                    android:textSize="15sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/textView67"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="10dp"
                    android:text="*"
                    android:textSize="15sp"
                    android:textColor="@color/azul_miituo"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView22"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="25dp"
                android:text="Total kms a pagar"
                android:theme="@style/textThemePrimary" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="end"
                android:paddingEnd="17dp"
                android:text="TextView"
                android:theme="@style/textThemePrimary"
                android:textStyle="bold" />
        </LinearLayout>

        <!--separadpr-->

        <!--Cobros adicionales-->

        <!--Tarifa por km-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView20"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="25dp"
                android:text="x Prima por kilómetro"
                android:theme="@style/textThemePrimary" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="end"
                android:paddingEnd="17dp"
                android:text="TextView"
                android:theme="@style/textThemePrimary"
                android:textStyle="bold"
                 />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView18"
                android:layout_width="150dp"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="25dp"
                android:text="+ Base mensual"
                android:theme="@style/textThemePrimary"/>

            <TextView
                android:id="@+id/textView19"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="end"
                android:paddingEnd="17dp"
                android:text="TextView"
                android:theme="@style/textThemePrimary"
                android:textStyle="bold" />
        </LinearLayout>

        <!--separadpr-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:gravity="end"
            android:orientation="horizontal">

            <View
                android:layout_width="200dp"
                android:layout_height="2dp"
                android:layout_marginRight="10dp"
                android:background="@color/azul_miituo"></View>
        </LinearLayout>

        <!--Total a cobrar-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView26"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:textStyle="bold"
                android:theme="@style/textThemePrimary"
                android:text="Total a pagar"
                 />

            <TextView
                android:id="@+id/textView50"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="end"
                android:paddingEnd="17dp"
                android:text="TextView"
                android:theme="@style/textThemePrimary"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cntOdometros"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_height="wrap_content">
            <!--separadpr-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:background="@color/colorGray"></View>
            </LinearLayout>

            <!--Enviar o no-->

            <TextView
                android:id="@+id/textView55"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:paddingStart="25dp"
                android:text="Tus odómetros registrados"
                android:textColor="#878787"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="40dp"
                    android:text="Actual"
                    android:textColor="#878787"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingEnd="20dp"
                    android:text="TextView"
                    android:textSize="14sp" />

            </LinearLayout>

            <!--Odometro de anterior-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="40dp"
                    android:text="Anterior"
                    android:textColor="#878787"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingRight="20dp"
                    android:text="TextView"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layibuttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <Button
                android:id="@+id/button2"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:background="@drawable/button"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Pagar"
                android:theme="@style/buttonThemePrimary"
                android:textSize="12sp"
                android:textColor="#fff" />

            <Button
                android:id="@+id/button3"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_toStartOf="@+id/button2"
                android:layout_marginEnd="15dp"
                android:background="#FFFFFF"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textSize="12sp"
                android:fontFamily="@font/lato"
                android:textColor="@color/azul_miituo"
                android:text="Reintentar" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textoiva"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:gravity="start"
                android:paddingStart="10dp"
                android:fontFamily="@font/lato"
                android:text="Nuestros precios incluyen IVA"
                android:textSize="10sp" />
            <TextView
                android:id="@+id/textoTerminos"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:gravity="end"
                android:textColor="@color/azul_miituo"
                android:paddingEnd="10dp"
                android:fontFamily="@font/lato"
                android:text="Consultar Términos y Condiciones"
                android:textSize="10sp" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>